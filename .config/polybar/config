label-close-foreground = ${colors.xcolor0}
label-close-background = ${colors.xcolor7}
label-separator = " "
label-separator-foreground = ${colors.xcolor0}
label-separator-background = ${colors.xcolor7}

; lock
menu-0-0 = "  "
menu-0-0-exec = i3lock-next
menu-0-0-foreground = ${colors.xcolor0}
menu-0-0-background = ${colors.xcolor7}
; sleep
;menu-0-1 = "  "
;menu-0-1-exec = bash ~/scripts/lock.sh && systemctl suspend
;menu-0-1-foreground = ${colors.xcolor0}
;menu-0-1-background = ${colors.xcolor7}
; logout
menu-0-1 = "  "
menu-0-1-exec = pkill x
menu-0-1-foreground = ${colors.xcolor0}
menu-0-1-background = ${colors.xcolor7}
; reboot
menu-0-2 = "  "
menu-0-2-exec = sudo reboot
menu-0-2-foreground = ${colors.xcolor0}
menu-0-2-background = ${colors.xcolor7}
; shutdown
menu-0-3 = " "
menu-0-3-exec = sudo poweroff
menu-0-3-foreground = ${colors.xcolor0}
menu-0-3-background = ${colors.xcolor7}
; end stripe
menu-0-4 = "  "
menu-0-4-font = 6
menu-0-4-foreground = ${colors.xcolor1}
menu-0-4-background = ${colors.xcolor7}

