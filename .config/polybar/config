;----------------------------------------------------------
;	   				i 3   M O D U L E
;----------------------------------------------------------

[module/i3]
type = internal/i3
; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Set the scroll cycle direction
; Default: true
reverse-scroll = true


label-focused-foreground = ${colors.xcolor1}
label-focused-background = ${colors.xcolor3}
label-focused-padding = 0
label-focused-font = 3

label-unfocused-foreground = ${colors.xcolor7}
label-unfocused-background = ${colors.xcolor1}
label-unfocused-padding = 0
label-unfocused-font = 3

label-urgent-foreground = ${colors.xcolor1}
label-urgent-background = ${colors.xcolor4}
label-urgent-padding = 2
label-urgent-font = 3

;----------------------------------------------------------
;		       X W I N D O W
;----------------------------------------------------------

[module/xwindow]
type = internal/xwindow

format-foreground = ${colors.xcolor1}
format-background = ${colors.xcolor7}

label = "%title:0:64:...%"

;----------------------------------------------------------
;		   F I L E S Y S T E M
;----------------------------------------------------------

[module/filesystem]
type = internal/fs
interval = 25
fixed-values = true

mount-0 = /
;mount-1 = /home

format-mounted = <label-mounted>
format-mounted-foreground = ${colors.xcolor1}
format-mounted-background = ${colors.xcolor7}

;  
label-mounted = "  %percentage_used%%"
; %free%% %percentage_used%% %used%
label-mounted-foreground = ${colors.xcolor1}
label-mounted-background = ${colors.xcolor7}
label-unmounted =   %mountpoint%
label-unmounted-foreground = ${colors.xcolor1}
label-unmounted-background = ${colors.xcolor7}


;----------------------------------------------------------
;			    M P D
;----------------------------------------------------------

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-offline = No Music Playing...
format-offline-foreground = ${colors.xcolor7}
format-offline-background = ${colors.xcolor1}

format-online = <label-song> <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>
format-online-foreground = ${colors.xcolor7}
format-online-background = ${colors.xcolor1}

label-song-maxlen = 64
label-song-ellipsis = true

icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.xcolor1}
toggle-off-foreground = #66


